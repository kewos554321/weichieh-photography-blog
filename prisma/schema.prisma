generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Photo {
  id             Int          @id @default(autoincrement())
  slug           String       @unique
  title          String
  src            String
  category       String
  location       String
  latitude       Float?
  longitude      Float?
  date           DateTime
  camera         String?
  lens           String?
  story          String       @db.Text
  behindTheScene String?      @db.Text
  status         String       @default("published")
  publishedAt    DateTime?
  viewCount      Int          @default(0)
  likeCount      Int          @default(0)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  tags           PhotoTag[]

  // 隱私控制欄位
  visibility     String       @default("public") // public | unlisted | token | password
  accessToken    String?      @unique            // Token 模式的唯一存取碼
  tokenExpiresAt DateTime?                       // Token 過期時間（可選）
  accessPassword String?                         // 密碼模式的 bcrypt 雜湊

  // 關聯文章（點擊「閱讀完整故事」）
  article   Article? @relation(fields: [articleId], references: [id])
  articleId Int?

  // 相簿、留言、按讚
  albums   AlbumPhoto[]
  comments Comment[]
  likes    Like[]

  @@index([category])
  @@index([date])
  @@index([status])
  @@index([publishedAt])
  @@index([articleId])
  @@index([viewCount])
  @@index([likeCount])
  @@index([visibility])
}

model PhotoTag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  photos    Photo[]
  createdAt DateTime @default(now())
}

model PhotoCategory {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
}

model Article {
  id          Int          @id @default(autoincrement())
  slug        String       @unique
  title       String
  excerpt     String       @db.Text
  content     String       @db.Text
  cover       String
  category    String
  readTime    Int
  date        DateTime
  status      String       @default("draft")
  publishedAt DateTime?
  viewCount   Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  tags        ArticleTag[]

  // 關聯照片（文章底部的照片集）
  photos Photo[]

  // 留言
  comments Comment[]

  @@index([category])
  @@index([date])
  @@index([status])
  @@index([publishedAt])
  @@index([viewCount])
}

model ArticleTag {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  articles  Article[]
  createdAt DateTime  @default(now())
}

model ArticleCategory {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
}

model SiteSettings {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     Json
  updatedAt DateTime @updatedAt
}

model Media {
  id        Int        @id @default(autoincrement())
  filename  String
  url       String     @unique
  key       String     @unique
  mimeType  String
  size      Int
  width     Int?
  height    Int?
  alt       String?
  tags      MediaTag[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([filename])
  @@index([mimeType])
  @@index([createdAt])
}

model MediaTag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  media     Media[]
  createdAt DateTime @default(now())
}

// ========== 相簿功能 ==========

model Album {
  id          Int          @id @default(autoincrement())
  name        String
  slug        String       @unique
  description String?      @db.Text
  coverUrl    String?
  sortOrder   Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  photos      AlbumPhoto[]

  // 隱私控制欄位
  visibility     String    @default("public") // public | unlisted | token | password
  accessToken    String?   @unique            // Token 模式的唯一存取碼
  tokenExpiresAt DateTime?                    // Token 過期時間（可選）
  accessPassword String?                      // 密碼模式的 bcrypt 雜湊

  @@index([slug])
  @@index([sortOrder])
  @@index([visibility])
}

model AlbumPhoto {
  id        Int      @id @default(autoincrement())
  album     Album    @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId   Int
  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  photoId   Int
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())

  @@unique([albumId, photoId])
  @@index([albumId])
  @@index([photoId])
}

// ========== 留言功能 ==========

model Comment {
  id        Int           @id @default(autoincrement())
  name      String
  content   String        @db.Text
  status    CommentStatus @default(PENDING)
  photo     Photo?        @relation(fields: [photoId], references: [id], onDelete: Cascade)
  photoId   Int?
  article   Article?      @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId Int?
  ipHash    String
  createdAt DateTime      @default(now())

  @@index([photoId])
  @@index([articleId])
  @@index([status])
  @@index([createdAt])
}

enum CommentStatus {
  PENDING
  APPROVED
  REJECTED
}

// ========== 按讚功能 ==========

model Like {
  id        Int      @id @default(autoincrement())
  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  photoId   Int
  ipHash    String
  createdAt DateTime @default(now())

  @@unique([photoId, ipHash])
  @@index([photoId])
}
